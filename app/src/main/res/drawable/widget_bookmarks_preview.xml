<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Background -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:startColor="#FF6B35"
                android:centerColor="#F7931E"
                android:endColor="#FFD23F"
                android:type="linear" />
            <corners android:radius="16dp" />
            <stroke
                android:width="1dp"
                android:color="#33FFFFFF" />
        </shape>
    </item>
    
    <!-- Content preview -->
    <item
        android:left="16dp"
        android:top="16dp"
        android:right="16dp"
        android:bottom="16dp">
        <layer-list>
            <!-- Header line -->
            <item android:top="0dp">
                <shape android:shape="rectangle">
                    <solid android:color="#FFFFFF" />
                    <size android:height="2dp" />
                    <corners android:radius="1dp" />
                </shape>
            </item>
            
            <!-- German text line -->
            <item android:top="16dp">
                <shape android:shape="rectangle">
                    <solid android:color="#FFFFFF" />
                    <size android:height="3dp" />
                    <corners android:radius="1dp" />
                </shape>
            </item>
            
            <!-- Translation line -->
            <item android:top="28dp">
                <shape android:shape="rectangle">
                    <solid android:color="#E6FFFFFF" />
                    <size android:height="2dp" />
                    <corners android:radius="1dp" />
                </shape>
            </item>
            
            <!-- Bottom elements -->
            <item android:top="44dp">
                <shape android:shape="rectangle">
                    <solid android:color="#B3FFFFFF" />
                    <size android:height="2dp" />
                    <corners android:radius="1dp" />
                </shape>
            </item>
        </layer-list>
    </item>
    
</layer-list> 