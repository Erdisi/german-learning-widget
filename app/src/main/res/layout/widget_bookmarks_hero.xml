<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_hero_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/widget_bookmarks_hero_background"
    android:padding="16dp">

    <!-- Header with title and counter -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="12dp"
        android:baselineAligned="false">
        
        <TextView
            android:id="@+id/widget_hero_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/widget_hero_title"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium" />
        
        <TextView
            android:id="@+id/widget_hero_counter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/widget_hero_counter_placeholder"
            android:textColor="#B3FFFFFF"
            android:textSize="14sp"
            android:fontFamily="sans-serif-medium" />
    
    </LinearLayout>

    <!-- Preview Layout (Side Items) -->
    <LinearLayout
        android:id="@+id/widget_hero_previews"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp"
        android:visibility="visible"
        android:baselineAligned="false">

        <!-- Previous Preview -->
        <TextView
            android:id="@+id/widget_hero_prev_text"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:text="@string/widget_hero_previous_text"
            android:textColor="#99FFFFFF"
            android:textSize="11sp"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:background="@drawable/widget_hero_preview_background"
            android:layout_marginEnd="8dp"
            android:maxLines="1"
            android:ellipsize="end" />

        <!-- Spacer for center content -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="@string/widget_hero_dots_placeholder"
            android:textColor="#80FFFFFF"
            android:textSize="12sp"
            android:gravity="center"
            android:id="@+id/widget_hero_dots" />

        <!-- Next Preview -->
        <TextView
            android:id="@+id/widget_hero_next_text"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:text="@string/widget_hero_next_text"
            android:textColor="#99FFFFFF"
            android:textSize="11sp"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:background="@drawable/widget_hero_preview_background"
            android:layout_marginStart="8dp"
            android:maxLines="1"
            android:ellipsize="end" />

    </LinearLayout>

    <!-- Main Hero Content (Center Large Item) with more space for text -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@drawable/widget_hero_main_background"
        android:padding="20dp"
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp">

        <!-- German Text (Hero) with more space -->
        <TextView
            android:id="@+id/widget_hero_german_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/widget_demo_german_long"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:layout_marginBottom="16dp"
            android:maxLines="4"
            android:ellipsize="end"
            android:lineSpacingExtra="4dp" />

        <!-- Translation with more space -->
        <TextView
            android:id="@+id/widget_hero_translation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/widget_demo_english_long"
            android:textColor="#E6FFFFFF"
            android:textSize="18sp"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:maxLines="3"
            android:ellipsize="end"
            android:lineSpacingExtra="2dp" />

    </LinearLayout>

    <!-- Bottom Action Section with topic and buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:baselineAligned="false">

        <!-- Topic Badge moved to bottom -->
        <TextView
            android:id="@+id/widget_hero_topic"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/widget_demo_topic_greetings"
            android:textColor="#B3FFFFFF"
            android:textSize="12sp"
            android:fontFamily="sans-serif"
            android:background="@drawable/topic_background"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            android:layout_marginEnd="8dp" />

        <!-- Navigation Buttons -->
        <LinearLayout
            android:id="@+id/widget_hero_nav_buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:baselineAligned="false"
            android:layout_marginEnd="8dp">

            <!-- Previous Button -->
            <ImageButton
                android:id="@+id/widget_hero_prev_button"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_arrow_back"
                android:background="@drawable/widget_hero_button_background"
                android:contentDescription="@string/previous_bookmark_button_description"
                android:scaleType="centerInside"
                android:layout_marginEnd="8dp" />

            <!-- Next Button -->
            <ImageButton
                android:id="@+id/widget_hero_next_button"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_arrow_forward"
                android:background="@drawable/widget_hero_button_background"
                android:contentDescription="@string/next_bookmark_button_description"
                android:scaleType="centerInside" />

        </LinearLayout>

        <!-- Remove Bookmark Button -->
        <ImageButton
            android:id="@+id/widget_hero_remove_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_bookmark_filled"
            android:background="@drawable/widget_hero_remove_button_background"
            android:contentDescription="@string/remove_bookmark_button_description"
            android:scaleType="centerInside" />

    </LinearLayout>

    <!-- Empty State Layout -->
    <LinearLayout
        android:id="@+id/widget_hero_empty_state"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        android:padding="24dp">

        <TextView
            android:id="@+id/widget_hero_empty_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/widget_hero_empty_title"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/widget_hero_empty_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/widget_hero_empty_subtitle"
            android:textColor="#B3FFFFFF"
            android:textSize="14sp"
            android:fontFamily="sans-serif"
            android:gravity="center" />

    </LinearLayout>

</LinearLayout> 