<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/widget_background"
    android:padding="16dp">
    
    <!-- Header with title and level indicator -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="12dp">
        
        <TextView
            android:id="@+id/widget_main_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/widget_main_title"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium" />
        
        <TextView
            android:id="@+id/widget_level_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/widget_level_placeholder"
            android:textColor="#B3FFFFFF"
            android:textSize="12sp"
            android:fontFamily="sans-serif"
            android:background="@drawable/topic_background"
            android:paddingHorizontal="8dp"
            android:paddingVertical="2dp" />
    
    </LinearLayout>
    
    <!-- Content area with more space for text -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center_vertical">
        
        <!-- German Text with more space -->
        <TextView
            android:id="@+id/widget_german_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/widget_demo_german_greeting"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            android:layout_marginBottom="12dp"
            android:lineSpacingExtra="4dp"
            android:gravity="center_vertical"
            android:maxLines="3"
            android:ellipsize="end" />
        
        <!-- Translation with more space -->
        <TextView
            android:id="@+id/widget_translation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/widget_demo_english_greeting"
            android:textColor="#E6FFFFFF"
            android:textSize="16sp"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="2dp"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:ellipsize="end" />
    
    </LinearLayout>
    
    <!-- Bottom section with topic and save button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="12dp">
        
        <!-- Topic -->
        <TextView
            android:id="@+id/widget_topic"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/widget_demo_topic_greetings"
            android:textColor="#B3FFFFFF"
            android:textSize="12sp"
            android:fontFamily="sans-serif"
            android:background="@drawable/topic_background"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp" />
        
        <!-- Save Button -->
        <ImageButton
            android:id="@+id/widget_save_button"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_bookmark_border"
            android:background="@drawable/widget_button_background"
            android:contentDescription="@string/save_sentence_description"
            android:scaleType="centerInside"
            android:layout_marginStart="8dp" />
    
    </LinearLayout>

</LinearLayout> 