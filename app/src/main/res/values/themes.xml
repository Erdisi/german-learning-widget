<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base theme for the app -->
    <style name="Theme.GermanLearningWidget" parent="android:Theme.Material.Light.NoActionBar">
        <!-- Enable window animations -->
        <item name="android:windowAnimationStyle">@style/AppWindowAnimation</item>
        <!-- Set smooth launch animation -->
        <item name="android:windowActivityTransitions">true</item>
        <!-- Allow shared element transitions -->
        <item name="android:windowContentTransitions">true</item>
        <!-- Smooth status bar transition -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <!-- Enable hardware acceleration for smooth animations -->
        <item name="android:hardwareAccelerated">true</item>
    </style>
    
    <!-- Launch theme with splash-like behavior -->
    <style name="Theme.GermanLearningWidget.Launch" parent="Theme.GermanLearningWidget">
        <item name="android:windowBackground">@drawable/launch_background</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <!-- Window animation style -->
    <style name="AppWindowAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/fade_in</item>
        <item name="android:activityOpenExitAnimation">@anim/fade_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_left</item>
    </style>

</resources>